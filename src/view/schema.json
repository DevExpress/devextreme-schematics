{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsDevextremeView",
  "title": "Devextreme View Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the view.",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "addToRoutes": {
      "type": "boolean",
      "description": "Specifies if the component will be in the navigation.",
      "default": false
    }
  }
}
